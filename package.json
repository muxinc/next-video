{
  "name": "next-video",
  "version": "0.5.0",
  "description": "A React component for adding video to your Next.js application. It extends both the video element and your Next app with features for automatic video optimization.",
  "type": "module",
  "main": "./dist/cjs/components/video.js",
  "module": "./dist/components/video.js",
  "exports": {
    ".": {
      "import": "./dist/components/video.js",
      "require": "./dist/cjs/components/video.js",
      "default": "./dist/components/video.js"
    },
    "./process": {
      "import": "./dist/main.js",
      "require": "./dist/cjs/main.js",
      "default": "./dist/main.js"
    },
    "./request-handler": {
      "import": "./dist/request-handler.js",
      "require": "./dist/cjs/request-handler.js",
      "default": "./dist/request-handler.js"
    },
    "./video-types/*": "./video-types/*.d.ts",
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "watch": "npm run build:esm -- -w & npm run build:cjs -- -w",
    "build": "npm run clean && (npm run build:esm && npm run build:cjs)",
    "build:esm": "tsc --module es2020",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "postbuild:cjs": "echo '{\"type\": \"commonjs\"}' > ./dist/cjs/package.json",
    "prepare": "npm run build",
    "cli": "node --loader tsx --no-warnings ./src/cli",
    "test": "glob -c \"node --loader tsx --no-warnings --test\" \"./tests/**/*.test.ts\""
  },
  "bin": {
    "next-video": "./dist/cli.js"
  },
  "files": [
    "dist",
    "video-types"
  ],
  "author": "Mux Lab <lab@mux.com>",
  "license": "MIT",
  "peerDependencies": {
    "@types/react": "^17.0.0 || ^18",
    "react": "^17.0.2 || ^18",
    "react-dom": "^17.0.2 || ^18"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.3.1",
    "@types/node": "^20.8.4",
    "@types/react": "^18.2.27",
    "@types/yargs": "^17.0.28",
    "glob": "^10.3.10",
    "next": "^13.5.4",
    "react": "^18.2.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.2.0",
    "@mux/mux-node": "github:stainless-sdks/mux-node#8.0.0-beta.1",
    "@mux/mux-player-react": "2.0.1",
    "@next/env": "^13.5.4",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "magicast": "^0.3.0",
    "sharp": "^0.32.6",
    "symlink-dir": "^5.2.0",
    "thumbhash": "^0.1.1",
    "undici": "^5.25.4",
    "yargs": "^17.7.2"
  }
}
